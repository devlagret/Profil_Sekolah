<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainrow">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lyh_eskul"
        android:layout_marginRight="@dimen/margin_eskul"
        android:layout_marginLeft="@dimen/margin_eskul"
        android:layout_marginBottom="@dimen/crd_margin_eskul"
        android:layout_marginTop="@dimen/crd_margin_eskul"
        app:cardCornerRadius="@dimen/crdv_radius"
        app:cardElevation="@dimen/crdv_elev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iVeskul"
                android:layout_width="0dp"
                android:layout_marginTop="15dp"
                android:layout_height="250dp"
                android:layout_marginStart="@dimen/margin_eskul"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/namaeskul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="namaeskul"
                android:textColor="#000000"
                android:textSize="@dimen/galery_textsize_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deskripsieskul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/text_deskripsi_cardview"
                android:textColor="#003F9E"
                android:textSize="@dimen/galery_textsize_secondary"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>