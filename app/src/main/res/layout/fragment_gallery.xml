<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.gallery.GalleryFragment"
        >

        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/crdv_lyh_gallery"
                android:layout_margin="@dimen/crdv_margin_gallery"
                app:cardCornerRadius="@dimen/crdv_radius"
                app:cardElevation="@dimen/crdv_elev">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/crdv_imgh_gallery"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/crdv_img_mrgintp"
                    android:layout_margin="@dimen/imgmargin_gallery"
                    android:src="@drawable/kelas"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/crdv_padbtm_gallery">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kegiatan KBM di kelas"
                        android:textColor="#000000"
                        android:textSize="@dimen/galery_textsize_primary"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Suasana kegiatan belajar mengajar dikelas"
                        android:textColor="#003F9E"
                        android:textSize="@dimen/galery_textsize_secondary"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </ScrollView>
